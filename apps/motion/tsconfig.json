{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@workspace/trpc/*": ["../../packages/trpc/src/*"],
      "@workspace/auth/*": ["../../packages/auth/src/*"],
      "@workspace/drizzle/*": ["../../packages/drizzle/src/*"],
      "@workspace/storage/*": ["../../packages/storage/src/*"],
      "@workspace/email/*": ["../../packages/email/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../admin/project.config.ts"
  ],
  "exclude": ["node_modules"]
}
