# Enable hoisting for React Native compatibility
# This ensures packages like react-native-css-interop are accessible
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=*nativewind*
public-hoist-pattern[]=*react-native-css-interop*
public-hoist-pattern[]=*@react-native*
public-hoist-pattern[]=*@tanstack/react-query*
public-hoist-pattern[]=*@tanstack/query-core*

# Shamefully hoist all dependencies (needed for React Native/Metro)
shamefully-hoist=true

# Auto install peers
auto-install-peers=true
